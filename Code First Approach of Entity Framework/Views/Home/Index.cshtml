@model IEnumerable<Code_First_Approach_of_Entity_Framework.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@*@Html.Raw(TempData["InsertMessage"])*@
<p style="color:forestgreen">@TempData["InsertMessage"]</p>
<p style="color:forestgreen">@TempData["UpdateMessage"]</p>
<p style="color:forestgreen">@TempData["DeletedMessage"]</p>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


